<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.site.chanchanchan.mapper.ReviewMapper">
	<select id="select" parameterType="Integer" resultType="Review">
		SELECT * FROM review WHERE review_id = #{review_id}
	</select>
	<insert id="insert" parameterType="Review">
		INSERT INTO review VALUES (review_id,#{member_index},#{product_id},#{review_rank},#{review_content},NOW())
	</insert>
	<update id="update" parameterType="Review">
		UPDATE review SET member_pw=#{member_pw},member_name=#{member_name},member_email=#{member_email},member_tel=#{member_tel},member_rank=#{member_rank},member_status=#{member_status}
		WHERE member_id=#{member_id}
	</update>
	<delete id="delete" parameterType="Integer">
		DELETE FROM review WHERE member_id=#{member_id}
	</delete>
</mapper>